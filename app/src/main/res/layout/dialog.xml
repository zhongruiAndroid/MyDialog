                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="我是待老哥2"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="我是待老哥3"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="我是待老哥4"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="我是待老哥5"
                />
            <TextView
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:gravity="center"
                android:text="我是待老哥6"
                />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
</LinearLayout>