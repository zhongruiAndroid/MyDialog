<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ClockView">
        <!--刻度长度-->
        <attr name="keduLength" format="dimension"></attr>
        <!--刻度宽度-->
        <attr name="keduWidth" format="dimension"></attr>
        <!--刻度颜色-->
        <attr name="keduColor" format="color"></attr>
        <!--整点刻度长度-->
        <attr name="zhengkeduLength" format="dimension"></attr>
        <!--整点刻度宽度-->
        <attr name="zhengkeduWidth" format="dimension"></attr>
        <!--整点刻度颜色-->
        <attr name="zhengkeduColor" format="color"></attr>
        <!--时钟半径-->
        <attr name="clockRadius" format="dimension"></attr>
        <!--时钟背景-->
        <attr name="clockColor" format="color"></attr>
        <!--时钟边框宽度-->
        <attr name="clockBorderWidth" format="dimension"></attr>
        <!--时钟边框颜色-->
        <attr name="clockBorderColor" format="color"></attr>
        <!--时钟中心圆点半径-->
        <attr name="clockPointRadius" format="dimension"></attr>
        <!--时钟中心圆点颜色-->
        <attr name="clockPointColor" format="color"></attr>
        <!--时钟内边距-->
        <attr name="clockPadding" format="dimension"></attr>


        <!--时针长度-->
        <attr name="shiZhenLength" format="dimension"/>
        <attr name="shiZhenLengthD" format="dimension"/>
        <!--时针宽度-->
        <attr name="shiZhenWidth" format="dimension"/>
        <!--时针颜色-->
        <attr name="shiZhenColor" format="color"/>

        <!--分针长度-->
        <attr name="fenZhenLength" format="dimension"/>
        <attr name="fenZhenLengthD" format="dimension"/>
        <!--分针宽度-->
        <attr name="fenZhenWidth" format="dimension"/>
        <!--分针颜色-->
        <attr name="fenZhenColor" format="color"/>


        <!--秒针长度-->
        <attr name="miaoZhenLength" format="dimension"/>
        <attr name="miaoZhenLengthD" format="dimension"/>
        <!--秒针宽度-->
        <attr name="miaoZhenWidth" format="dimension"/>
        <!--秒针颜色-->
        <attr name="miaoZhenColor" format="color"/>


        <!--绘制时间间隔1-1000毫秒-->
        <attr name="timeInterval" format="integer"/>
        <!--刻度数字大小-->
        <attr name="clockTextSize" format="dimension"/>
        <!--刻度数字颜色-->
        <attr name="clockTextColor" format="color"/>
        <!--刻度数字与刻度的间隔-->
        <attr name="clockTextDistance" format="dimension"/>

    </declare-styleable>
</resources>